{{>toastMessage message}}
<form class='table_product' id="table_trashProduct" method="post" action="/sizeProduct/handle-Action">
    <div class='title'>
        <h2>Sản phầm đã xóa</h2>
        <hr />
    </div>
    <div class='topbar__table'>
        <div class='topbar__table--add'>
            <button>
            <i class="fa-solid fa-arrow-left add"></i>
                <a href='/sizeProduct'>Quay lại</a>
            </button>
        </div>
        <div class='search__products'>
            <label>
                <input type='text' placeholder='Searching...' />
                <i class='fa-solid fa-magnifying-glass fa-table'></i>
            </label>
        </div>
    </div>
     <div class="selectAction">
        <div class="form-checkAll">
            <input type="checkbox" id="checkAll" class="form-checkAll-input">
            <label for="checkAll" class="label-form-checkAll">Chọn tất cả</label>
        </div>
        <select name="action" class="select-Action" id="action" required>
            <option value="" >-- Hành động --</option>
            <option value="restore">Khôi phục</option>
            <option value="force">Xóa vĩnh viễn</option>
        </select>
        <button type="submit" class="submit" disabled>Thực hiện</button>
    </div>
    <div class='tables'>
        <table>
            <tr>
                <th>#</th>
                <th>STT</th>
                <th>Tên SP</th>
                <th>Size</th>
                <th>Xóa bởi</th>
                <th>Khôi phục</th>
                <th>Xóa vĩnh viễn</th>
            </tr>
            {{#if sizes}}
            {{#each sizes}}
                <tr>
                    <td>
                        <div class="form-checkAll">
                            <input type="checkbox" id="{{this._id}}" value="{{this._id}}" name="sizes" class="form-check-input">
                        </div>
                    </td>
                     
                    <td>{{sum @index 1}}</td>
                    <td>{{this.id_product.title}}</td>
                    <td>{{this.name}}</td>
                    <td>{{this.deletedBy.name}}</td>
                    <td>
                        <a  id="restore-size" data-id='{{this._id}}'><i class="fa-solid fa-rotate-left"></i></a>
                    </td>
                    <td>
                        <button id='force_Destroy-size' data-id='{{this._id}}'><i class='fa-solid fa-trash remove'></i></button>
                    </td>
                </tr>
            {{/each}}
            {{else}}

            <td colspan="10">Thùng rác trống.</td>
            {{/if}}
        </table>
    </div>
       <div class='paging'>
        <ul>
            {{{pageView _page paging}}}
        </ul>
    </div>
</form>
<script src='/js/modalRestore.js'>

</script>