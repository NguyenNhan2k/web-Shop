{{>toastMessage message}}

<form action="/statusOrder/handle-Action" method="post" class='table_product'>
    <div class='title'>
        <h2>Tables Status Order</h2>
        <hr />
    </div>
    <div class='topbar__table'>

        <div class='topbar__table--add'>
            <button>
                <i class='fa-solid fa-plus add'></i>
                <a href='/statusOrder/create'>Thêm</a>
            </button>
            <button>
                <i class='fa-solid fa-trash trash'></i><a href='/statusOrder/trash'>Thùng Rác</a>
                <p class='countTrash'>{{countStatusOrder}}</p>
            </button>
        </div>
        <div class='search__products'>

            <label>
                <input type='text' placeholder='Searching...' />
                <i class='fa-solid fa-magnifying-glass fa-table'></i>
            </label>
        </div>
    </div>
    <div class='selectAction'>
        <div class='form-checkAll'>
            <input type='checkbox' id='checkAll' class='form-checkAll-input' />
            <label for='checkAll' class='label-form-checkAll'>Chọn tất cả</label>
        </div>
        <select name='action' class='select-Action' id='action' required>
            <option value=''>-- Hành động --</option>
            <option value='delete'>Xóa</option>
        </select>
        <button type='submit' class='submit' disabled>Thực hiện</button>
    </div>
    <div class='tables'>
        <table>
            <tr>
                <th>#</th>
                <th>STT</th>
                <th>Tên trạng thái {{{sortable 'name' _sort}}}</th>
                <th>Xem</th>
                <th>Sửa</th>
                <th>Xóa</th>
            </tr>
            {{#if Status}}
                {{#each Status}}
                    <tr>
                        <td>
                            <div class='form-checkAll'>
                                <input
                                    type='checkbox'
                                    id='{{this._id}}'
                                    value='{{this._id}}'
                                    name='statusOrders'
                                    class='form-check-input'
                                />
                            </div>
                        </td>
                        <td>{{sum @index 1}}</td>
                        <td>{{this.name}}</td>
                        <td>
                            <a href='/statusOrder/{{this._id}}'><i class='fa-solid fa-eye'></i></a>
                        </td>
                        <td>
                            <a href=''><i class='fa-solid fa-pen'></i></a>
                        </td>
                        <td>
                            <button id='delete-statusOrder' data-id='{{this._id}}'><i
                                    class='fa-solid fa-trash remove'
                                ></i></button>
                        </td>
                    </tr>

                {{/each}}
            {{else}}
                <td colspan='8'>Trạng thái đơn hàng trống !</td>
            {{/if}}
        </table>
    </div>
</div>
<script src='/js/modalDelete.js'>

</script>